<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/enableHotspotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Hotspot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/disableHotspotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Hotspot"
        android:layout_below="@id/enableHotspotButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disableHotspotButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Status: Unknown" />

</RelativeLayout>
